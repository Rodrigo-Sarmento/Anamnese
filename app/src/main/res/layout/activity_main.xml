        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbNuncaAbdominal"
            android:text="Nunca"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c)Dor Nas Pernas"
        android:textColor="@color/black"
        android:textSize="15dp"/>
